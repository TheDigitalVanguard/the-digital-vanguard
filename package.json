{
  "name": "the-digital-vanguard",
  "version": "1.0.0",
  "description": "the-digital-vanguard",
  "devDependencies": {
    "@types/rollup": "^0.51.4",
    "concurrently": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "rollup": "^4.36.0"
  },
  "scripts": {
    "commit": "git cz",
    "start": "concurrently \"npm run start-client\" \"npm run start-server\"",
    "dev": "concurrently \"npm run dev-client\" \"npm run dev-server\"",
    "test": "concurrently \"npm run test-client\" \"npm run test-server\"",
    "build": "concurrently \"npm run build-client\" \"npm run build-server\"",
    "lint": "concurrently \"npm run lint-client\" \"npm run lint-server\"",
    "start-client": "cd client && npm run start",
    "start-server": "cd server && npm run start",
    "dev-client": "cd client && npm run dev",
    "dev-server": "cd server && npm run dev",
    "test-client": "cd client && npm test",
    "test-server": "cd server && npm test",
    "build-client": "cd client && npm run build",
    "build-server": "cd server && npm run build",
    "lint-client": "cd client && npm run lint",
    "lint-server": "cd server && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshuagilley/the-digital-vanguard.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joshuagilley/the-digital-vanguard/issues"
  },
  "homepage": "https://github.com/joshuagilley/the-digital-vanguard#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "typescript": "^5.8.2"
  }
}

{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled JavaScript
    "baseUrl": "./",
    "rootDir": "./", // The root directory for source files
    "module": "commonjs", // Set the module system to commonjs for Node.js
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "config/*": ["config/*"],
      "routes/*": ["routes/*"]
    }
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}

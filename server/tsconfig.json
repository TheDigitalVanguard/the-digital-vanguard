{
  "extends": "../tsconfig",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled JavaScript
    "baseUrl": "./",
    "module": "commonjs", // Set the module system to commonjs for Node.js
    "paths": {
      "config/*": ["config/*"],
      "routes/*": ["routes/*"]
    }
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}

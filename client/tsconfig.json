{
  "extends": "../tsconfig",
  "compilerOptions": {
    "baseUrl": "src",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "src": ["src/*"],
      "components": ["src/components/*"],
      "assets": ["src/assets/*"],
      "pages": ["src/pages/*"],
      "utils": ["src/utils/*"],
      "mock": ["src/mock/*"],
      "public": ["public/*"],
      "hooks": ["src/hooks/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
